    </header>
    
    
    <div class="content" style="margin-top:10%">
        <div class="container-fluid">
            <div class="shopping-cart">
                <h2>SHOPPING CART</h2>
                <div class="cart-detailed">
                    <div class="cart-detailed-tittle">
                        <div class="row">
                            <h5 class="product-cart">PRODUCT</h5>
                            <h5 class="price-cart">PRICE</h5>
                            <h5 class="quantity-cart">QUANTITY</h5>
                            <h5 class="total-cart">NUMBERS</h5>
                        </div>
                    </div>
                    <hr>
                    {{# if products}}
                        {{# each products}}   
                        <div class="row" style="color:black" >
                            <div class="col-md-3" style="margin-left:10%">
                                <h5 class="product-cart">{{this.item.title}}</h5>
                            </div>
                            <div class="col-md-2" style="padding-left:5%">
                                <h5 class="price-cart" >{{this.item.price}}$</h5>
                            </div>
                            <div class="col-md-3"style="padding-left:4%">
                                <h5 class="quantity-cart">{{this.item.inventory}}</h5>
                            </div>
                            <div class="col-md-2"style="padding-left:6%">
                                <h5 class="total-cart">{{this.qty}}</h5>
                                <a href="/Remove_One?id={{this.item._id}}" style="text-decoration:none;"><button type="button" class="close" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button></a>
                            </div>
                         
                            
                        </div>
                        {{/each}}
                    {{else}}
                        <div class="row">
                            <div class="col-sm-3 col-md-3 col-md-offset-3">

                            </div>
                            <div class="col-sm-6 col-md-6 col-md-offset-3">
                                <h2 class="text-info">No item in Cart</h2>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5 col-md-5 col-md-offset-3">

                            </div>
                            <div class="col-sm-6 col-md-6 col-md-offset-3" style="padding-left: 5%;">
                                <a href="/"><button type="submit"class="btn btn-primary" >Buy Now</button></a>
                                    
                            </div>
                        </div>
                    {{/if}}
                </div>
                <p>
                <div class="subtotal-purchase"> 
                    <i class="fas fa-dollar-sign"></i> Subtotal ({{session.cart.totalQty}} items): <span id="money">{{totalPrice}}$</span>
                    <button type="button" class="btn btn-default cart" data-toggle="modal" 
                                data-target="#Buy_Now"><i class="fas fa-cart-plus" ></i>
                         Purchase your items
                    </button>
                    {{# if account}}
                        <div id="Buy_Now" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        
                                        <h4 class="modal-title">Purchase successful</h4>
                                    </div>
                                    <div class="modal-body text-left">
                                        <p>Click the continue button to return to the homepage</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/Buy_Product" style="text-decoration:none;"><button type="button" class="btn btn-info">Continue</button></a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {{else}}
                        <div id="Buy_Now" class="modal fade" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        
                                        <h4 class="modal-title">You are not logged in</h4>
                                    </div>
                                    <div class="modal-body text-left">
                                        <p>Click the login button to LOGIN</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="/login" style="text-decoration:none;"><button type="button" class="btn btn-info">Login</button></a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    {{/if}}
                </div>
                </p>    
            </div>
        </div>
        <div class="product-feature container-fluid">
            <h2 class="best-seller">Best Seller</h2>
            <div class="row">
                {{#each list_product}}
                <div class="col-md-2">
                    {{#each this}}
                    <div class="product-top">
                        <img src="{{this.imgPath}}">
                        <div class="overlay">
                            <button type="button" class="btn btn-secondary" title="Show Detail">
                                <a href="/product/{{this._id}}"><i class="fa fa-eye"></i></a></button>
                            <button type="button" class="btn btn-secondary" title="Add To Your Favorite List">
                                <i class="fa fa-heart"></i></button>
                            <button type="button" class="btn btn-secondary add-cart" title="Add To Your Cart">
                                <a href="/add-to-cart?id={{this._id}}&sl=1"><i class="fa fa-shopping-cart"></i></a></button>
                        </div>
                    </div>
                    <div class="product-bottom text-center">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <i class="far fa-star"></i>
                        <h3>{{this.title}}</h3>
                        <h5>{{this.price}}$</h5>
                        
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
            <h2 class="export-products">New Export Product</h2>
            <div class="row">
              {{#each new_product}}
                <div class="col-md-2">
                    {{#each this}}
                    <div class="product-top">
                        <img src="{{this.imgPath}}">
                        <div class="overlay">
                            <button type="button" class="btn btn-secondary" title="Show Detail">
                                <a href="/product/{{this._id}}"><i class="fa fa-eye"></i></a></button>
                            <button type="button" class="btn btn-secondary" title="Add To Your Favorite List">
                                <i class="fa fa-heart"></i></button>
                            <button type="button" class="btn btn-secondary add-cart" title="Add To Your Cart">
                                <a href="/add-to-cart?id={{this._id}}&sl=1"><i class="fa fa-shopping-cart"></i></a>></button>
                        </div>
                    </div>
                    <div class="product-bottom text-center">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                        <i class="far fa-star"></i>
                        <h3>{{this.title}}</h3>
                        <h5>{{this.price}}$</h5>
                    </div>
                    {{/each}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
